{
  "name": "arguments-to-class-properties",
  "version": "1.0.0",
  "description": "Utility to attach arguments to the constructor of a JavaScript class as named class properties",
  "main": "./lib/index.js",
  "scripts": {
    "pack-base": "webpack ./lib/index.js --module-bind 'js=babel?presets[]=es2015' --output-path ./dist/ --output-library attachArgsToClass",
    "pack": "webpack --output-filename attachArgsToClass.js",
    "pack-min": "webpack --optimize-minimize --output-filename attachArgsToClass.min.js",
    "develop": "rm ./dist/* && npm run pack -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afaqurk/arguments-to-class-properties.git"
  },
  "author": "Afaq Tariq <afaq.tariq@inmar.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/afaqurk/arguments-to-class-properties/issues"
  },
  "homepage": "https://github.com/afaqurk/arguments-to-class-properties#readme",
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "webpack": "^1.13.0"
  }
}
